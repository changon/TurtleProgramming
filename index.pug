		// Vue
		script(src='https://unpkg.com/vue')


		// }
	body
		// Main wrap {
		#main-wrap
			// Toolbar {
			#toolbar

				// Language select {
				label(for='language-select') Language
				select#language-select.selectpicker.show-tick.show-menu-arrow(
					name='select', aria-label='Select language',
					@change='updateLanguage',
					v-model='currentLanguage'
				)
					option(v-for='lang in supportedLanguages', :value='lang.value') {{ lang.name }}
				// }

			// } End toolbar

			// Code {
			#code.col-lg-6
				#editor(aria-label='Editor')
					// Code goes here
			// } End code

			// Output {
			#output.col-lg-6
				iframe#output-iframe(aria-label='Output')
					// Sandbox will be inserted here
			// } End output
		// } End main wrap

		script(src='src/main.js')
		script(src='src/load-iframe.js')
